<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if project.img %}
        {%
          include figure.liquid
          loading="eager"
          path=project.img
          width="250px"
          height="150px"
          alt="project thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <div style="margin-top: 10px;"> <!-- Container for spacing -->
          <div style="
              display: inline-block; /* To fit content size */
              padding: 5px 10px; /* Space inside the rectangle */
              border: 1px solid #ccc; /* Border of the rectangle */
              background-color: #fbe18e; /* Background color */
              font-size: 12px; /* Font size for the text */
              color: #333; /* Text color */
              border-radius: 4px; /* Rounded corners */
          ">
              {{ project.fund }}
          </div>
        </div>
        <h2 class="card-title">{{ project.title }}</h2>
        <p class="card-text" style="font-size: 10px;">{{ project.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if project.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if project.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ project.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
